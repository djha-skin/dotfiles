#!/bin/sh
set -ex

. ~/.profile

if [ -z "${WORK_DOMAIN}" ]
then
    echo "You need to set the work domain." >&2
    exit 1
fi

itis=$(date '+%Y-%m-%d-%H-%M-%S')
fname="${itis}.png"
src="${HOME:-/home/danielhaskin}/Pictures/Screenshots"


dest="Screenshots"
screenshot-region "${src}/${fname}"
fid=$(gdrive upload --name "${dest}" "${src}/${fname}" | \
    sed -n -e '/Uploaded \([^ ]*\).*$/ { s|^ *Uploaded \([^ ]*\).*$|\1|g; p }' 2> ~/.sgd-errors)
echo "${fid}"

gdrive share --type domain --role commenter --domain "${WORK_DOMAIN:-example.com}" "${fid}" 2>~/.sgd-errors
url=$(gdrive info "${fid}" | awk -F': ' '/ViewUrl/{print $2}' 2>~/.sgd-errors)
printf "${url}"  | copy
zenity --title "screen2gdrive" --info --text "Synced to Work GDrive, URL in clipboard"
#!/bin/sh
set -ex


raw=false
remote=HomeGoogleDrive
while [ -n "${1}" ]
do
    case "${1}" in
        --raw)
            raw=true
            shift
            ;;
        --remote)
            shift
            remote="${1}"
            shift
            ;;
        *)
            echo "Nope." >&2
            exit 1
            ;;
    esac
done

dest="${remote}:Files"
path=$(zenity --file-selection --title "Upload to ${remote}")
fname="$(echo "${path}" | sed -e 's|[^/]*/||g')"

#echo "startup"
#mkdir -p "${src}"
#rclone mkdir "${dest}"

rclone copy "${path}" "${dest}/${fname}"
raw_link=$(rclone link "${dest}/${fname}")
if [ "${raw}" = "true" ]
then
    printf "${raw_link}" | copy
else
    file_id=$(printf "${raw_link}" | sed -e 's|^[^?]*[?]id=||')
    printf "https://drive.google.com/uc?id=${file_id}&filename=${fname}" | copy
fi
zenity --title "file2gdrive" --info --text "Synced to ${remote}, URL in clipboard"

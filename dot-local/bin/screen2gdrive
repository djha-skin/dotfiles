#!/bin/sh
set -ex

raw=false
viewport=false
remote=HomeGoogleDrive
while [ -n "${1}" ]
do
    case "${1}" in
        --raw)
            raw=true
            shift
            ;;
        --view)
            viewport=true
            shift
            ;;
        --remote)
            shift
            remote="${1}"
            shift
            ;;
        *)
            echo "Nope." >&2
            exit 1
    esac
done

itis=$(date '+%Y-%m-%d-%H-%M-%S')
fname="${itis}.png"
src="${HOME:-/home/danielhaskin}/Pictures"
dest="${remote}:/Screenshots"

#echo "startup"
#mkdir -p "${src}"
#rclone mkdir "${dest}"

echo "screenshot"
maim -s "${src}/${fname}"
echo "copy"
rclone copy "${src}/${fname}" "${dest}/"
echo "clipboard"
#rclone link --expire 4h "${dest}/${fname}" | copy
#printf "https://drive.google.com/uc?id=${download_id}" | ${paste}
raw_link=$(rclone link "${dest}/${fname}")

if [ "${raw}" = "true" ]
then
    printf "${raw_link}" | ${copy}
elif [ "${viewport}" = "true" ]
then
    file_id=$(printf "${raw_link}" | sed -e 's|^[^?]*[?]id=||')
    printf "https://drive.google.com/file/d/${file_id}/view?usp=drivesdk" | ${copy}
else
    file_id=$(printf "${raw_link}" | sed -e 's|^[^?]*[?]id=||')
    printf "https://drive.google.com/uc?id=${file_id}&filename=${fname}" | ${copy}
fi
zenity --title "screen2gdrive" --info --text "Synced to ${remote}, URL in clipboard"

#!/bin/sh
set -ex
if [ -f ~/.profile ]
then
    . ~/.profile
elif [ -f ~/.zprofile ]
then
    . ~/.zprofile
fi

echo "${@}" > ~/.screen2dropbox.log

raw=false
viewport=false
remote=HomeDropbox
while [ -n "${1}" ]
do
    case "${1}" in
        --raw)
            raw=true
            shift
            ;;
        --view)
            viewport=true
            shift
            ;;
        --remote)
            shift
            remote="${1}"
            shift
            ;;
        *)
            echo "Nope." >&2
            exit 1
    esac
done

itis=$(date '+%Y-%m-%d-%H-%M-%S')
fname="${itis}.png"
src="${HOME:-/home/danielhaskin}/Pictures/Screenshots"
dest="${remote}:/Screenshots"

#echo "startup"
#mkdir -p "${src}"
#rclone mkdir "${dest}"

echo "screenshot"  >> ~/.screen2dropbox.log 2>&1
screenshot-region "${src}/${fname}"  >> ~/.screen2dropbox.log 2>&1
echo "copy"  >> ~/.screen2dropbox.log 2>&1
rclone copyto "${src}/${fname}" "${dest}/${fname}"  >> ~/.screen2dropbox.log 2>&1
echo "clipboard"  >> ~/.screen2dropbox.log 2>&1
rclone link "${dest}/${fname}" | copy
#printf "https://drive.google.com/uc?id=${download_id}" | ${paste}
raw_link=$(rclone link "${dest}/${fname}")
printf "${raw_link}" | copy
notify "screen2dropbox" "Synced to ${remote}, URL in clipboard"  >> ~/.screen2dropbox.log 2>&1

#!/bin/sh

. ${HOME}/.profile

pandoc -f commonmark-raw_html+pipe_tables+task_lists+emoji -t pdf \
    --pdf-engine=xelatex \
    -V 'sansfont=Whitney SSm Medium' \
    -V 'mainfont=Whitney SSm Medium' \
    -V 'monofont=Fira Code' \
    -V colorlinks=true \
    -V 'fontsize=12pt' \
    -V 'geometry=margin=1in' \
    "${1}" \
    -o "${2}"
#!/bin/sh

usage() {
    echo "Usage: start-my-day [-r|--reset]" >&2
    echo "  -p, --play     After-hours mode" >&2
    echo "  -r, --reset    Reset the environment before starting" >&2
    echo "  -h, --help     Display this help message" >&2
    exit 1
}


reset=0
play=0
while [ -n "${1}" ]
do
    case "${1}" in
        -r|--reset)
            reset=1
            shift
            ;;
        -p|--play)
            play=1
            shift
            ;;
        -h|--help)
            shift
            usage
            ;;
        *)
            echo "Unknown option: ${1}" >&2
            ;;
    esac
done

if [ -z "${PROFILE_INCLUDED}" ]
then
    . ~/.profile
fi

if [ "${reset}" -eq 1 ]
then
    pcleard
fi

tmux rename-window "Planner"
tmux split-window
if [ "${play}" -ne 0 ]
then
    tmux send-keys -l -t :.0 "homenotesppushd -i 0 .diary"
else
    tmux send-keys -l -t :.0 "worknotesppushd -i 0 .diary"
fi
tmux send-keys -l -t :.1 "pom"
tmux new-window
tmux rename-window "Email"
tmux split-window
tmux send-keys -l -t :.0 "cd ~mutt -F ~/.mutt/mhome.accountOd"
if [ "${play}" -ne 0 ]
then
    tmux send-keys -l -t :.1 "cd ~mutt -F ~/.mutt/mmigadu.accountOd"
else
    tmux send-keys -l -t :.1 "cd ~mutt -F ~/.mutt/mwork.accountOd"
fi
tmux new-window
tmux rename-window "Calendar"
tmux send-keys -l -t :.0 "rm -rf ~/.config/vdirsyncer/*_tokenvdirsyncer synckhal interactive"
sleep 30
tmux new-window
tmux send-keys -l -t :.0 "newsboatR"
tmux rename-window "News"
if [ "${play}" -eq 0 ]
then
    tmux new-window
    tmux rename-window "VPN"
    tmux send-keys -l -t :.0 "vpndirgo run ./server.go"
    tmux split-window
    tmux send-keys -l -t :.1 "vpndir./aws-connect.sh"
    sleep 30
    tmux send-keys -l -t :.0 ""
    tmux send-keys -l -t :.0 "./dns.shssh git@github.com"

fi
tmux new-window
tmux rename-window "Chat"
tmux send-keys -l -t :.0 "senpai"
tmux split-window
tmux send-keys -l -t :.1 "login-to-discord"
tmux split-window
tmux send-keys -l -t :.2 "cd ~nchat"
tmux select-layout even-vertical
tmux new-window
tmux rename-window "Config"
tmux send-keys -l -t :.0 "cd ~/Code/skin/dotfiles"
tmux new-window
tmux rename-window "Lab"

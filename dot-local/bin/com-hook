#!/bin/sh
set -ex
. "${HOME}/.profile"

duration="0"
if [ "${1}" = "Blast" ]
then
    duration=1441
elif [ "${1}" = "Pacer" ]
then
    duration=61
elif [ "${1}" = "Rest" ]
then
    duration=301
fi

echo "$(date '+%s') + ${duration}" | bc | tee "${HOME}/.config/comodoro/${1}.txt"
notify-send 'üçÖ Pomodoro' "${1}!"
play -q "${HOME}/Music/ding.wav"

#!/bin/sh
set -e

# In case I want to switch windows
sleep 1


base_dir=$(echo "${1}" | sed -e 's|/[^/]*$|/|g')

dest="${base_dir}/${2}"

if [ ! -d "${dest}" ]
then
    mkdir -p "${dest}"
fi
now=$(date '+%Y-%m-%d-%H-%M-%S')
base=$(echo "${1}" | sed -e 's|[^/]*/||g' -e 's| |_|g' -e 's|\.md$||')

fname="${base}_${now}.png"
screenshot-region "${dest}/${fname}"
printf "![](${2}/${fname})"